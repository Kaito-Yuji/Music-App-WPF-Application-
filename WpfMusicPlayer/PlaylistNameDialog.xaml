<Window x:Class="WpfMusicPlayer.PlaylistNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Playlist" Height="700" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Background="#121212" Margin="0,0,0,-1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Create New Playlist" 
                   Foreground="White" FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="20,20,20,20"/>

        <!-- Playlist Cover -->
        <StackPanel Grid.Row="1" Margin="20,0,20,20">
            <TextBlock Text="Playlist Cover" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
            <Border x:Name="CoverBorder" Background="#404040" BorderBrush="#606060" BorderThickness="2" 
                    Width="150" Height="150" CornerRadius="5" HorizontalAlignment="Center"
                    MouseLeftButtonUp="CoverBorder_MouseLeftButtonUp" Cursor="Hand">
                <Grid>
                    <Image x:Name="CoverImage" Stretch="UniformToFill" Visibility="Collapsed"/>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“·" FontSize="40" Foreground="#808080" HorizontalAlignment="Center"/>
                        <TextBlock Text="Click to add cover" FontSize="12" Foreground="#808080" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Playlist Name -->
        <StackPanel Grid.Row="2" Margin="20,0,20,20">
            <TextBlock Text="Playlist Name *" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="NameTextBox" 
                     Background="#404040" Foreground="White" BorderThickness="1"
                     BorderBrush="#606060" Padding="10" FontSize="14"
                     KeyDown="NameTextBox_KeyDown" MaxLength="50"/>
        </StackPanel>

        <!-- Playlist Description -->
        <StackPanel Grid.Row="3" Margin="20,0,20,20">
            <TextBlock Text="Description (Optional)" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="DescriptionTextBox" 
                     Background="#404040" Foreground="White" BorderThickness="1"
                     BorderBrush="#606060" Padding="10" FontSize="12"
                     TextWrapping="Wrap" AcceptsReturn="True"
                     Height="80" VerticalScrollBarVisibility="Auto" MaxLength="200"/>
        </StackPanel>

        <!-- Character counters -->
        <StackPanel Grid.Row="4" Margin="20,0,20,0" VerticalAlignment="Top">
            <TextBlock x:Name="NameCharCountText" Text="0/50" Foreground="Gray" FontSize="10" HorizontalAlignment="Right" Margin="0,0,0,5"/>
            <TextBlock x:Name="DescCharCountText" Text="0/200" Foreground="Gray" FontSize="10" HorizontalAlignment="Right"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="20">
            <Button x:Name="OkButton" Content="Create Playlist" 
                    Background="#1db954" Foreground="White" BorderThickness="0"
                    Padding="20,10" Margin="0,0,10,0" FontSize="12"
                    Cursor="Hand" Click="OkButton_Click" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="Cancel" 
                    Background="#606060" Foreground="White" BorderThickness="0"
                    Padding="20,10" FontSize="12"
                    Cursor="Hand" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
