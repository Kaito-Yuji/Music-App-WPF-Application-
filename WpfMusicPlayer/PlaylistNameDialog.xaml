<Window x:Class="WpfMusicPlayer.PlaylistNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Playlist" Height="700" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#121212"
        BorderBrush="#2d2d30"
        BorderThickness="1"
        WindowStyle="None">

    <Window.Resources>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#404040"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1e1e1e"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                Focusable="False" 
                                HorizontalScrollBarVisibility="Hidden" 
                                VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#1db954"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#1db954"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1ed760"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#169c46"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Background="#121212" Margin="0,0,0,-1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Create New Playlist" 
                   Foreground="White" FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="20,20,20,20"/>

        <!-- Playlist Cover -->
        <StackPanel Grid.Row="1" Margin="20,0,20,20">
            <TextBlock Text="Playlist Cover" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
            <Border x:Name="CoverBorder" Background="#404040" BorderBrush="#606060" BorderThickness="2" 
                    Width="150" Height="150" CornerRadius="5" HorizontalAlignment="Center"
                    MouseLeftButtonUp="CoverBorder_MouseLeftButtonUp" Cursor="Hand">
                <Grid>
                    <Image x:Name="CoverImage" Stretch="UniformToFill" Visibility="Collapsed"/>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“·" FontSize="40" Foreground="#808080" HorizontalAlignment="Center"/>
                        <TextBlock Text="Click to add cover" FontSize="12" Foreground="#808080" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Playlist Name -->
        <StackPanel Grid.Row="2" Margin="20,0,20,20">
            <TextBlock Text="Playlist Name *" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="NameTextBox" 
                     Background="#404040" Foreground="White" BorderThickness="1"
                     BorderBrush="#606060" Padding="10" FontSize="14"
                     KeyDown="NameTextBox_KeyDown" MaxLength="50"/>
        </StackPanel>

        <!-- Playlist Description -->
        <StackPanel Grid.Row="3" Margin="20,0,20,20">
            <TextBlock Text="Description (Optional)" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="DescriptionTextBox" 
                     Background="#404040" Foreground="White" BorderThickness="1"
                     BorderBrush="#606060" Padding="10" FontSize="12"
                     TextWrapping="Wrap" AcceptsReturn="True"
                     Height="80" VerticalScrollBarVisibility="Auto" MaxLength="200"/>
        </StackPanel>

        <!-- Character counters -->
        <StackPanel Grid.Row="4" Margin="20,0,20,0" VerticalAlignment="Top">
            <TextBlock x:Name="NameCharCountText" Text="0/50" Foreground="Gray" FontSize="10" HorizontalAlignment="Right" Margin="0,0,0,5"/>
            <TextBlock x:Name="DescCharCountText" Text="0/200" Foreground="Gray" FontSize="10" HorizontalAlignment="Right"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="20">
            <Button x:Name="OkButton" Content="Create Playlist" 
                    Background="#1db954" Foreground="White" BorderThickness="0"
                    Padding="20,10" Margin="0,0,10,0" FontSize="12"
                    Cursor="Hand" Click="OkButton_Click" IsDefault="True" Style="{StaticResource PrimaryButton}" Width="90" Height="30"/>
            <Button x:Name="CancelButton" Content="Cancel" 
                    Foreground="White" BorderThickness="0"
                    Padding="20,10" FontSize="12"
                    Cursor="Hand" Click="CancelButton_Click" IsCancel="True" Style="{StaticResource ModernButton}" Width="90" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
