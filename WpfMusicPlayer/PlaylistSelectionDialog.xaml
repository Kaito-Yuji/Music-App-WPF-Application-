<Window x:Class="WpfMusicPlayer.PlaylistSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Playlist" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" WindowStyle="None">
    <Grid Background="#121212">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Select a Playlist" 
                   Foreground="White" FontSize="16" FontWeight="Bold"
                   Margin="20,20,20,10"/>

        <ListBox x:Name="PlaylistsListBox" Grid.Row="1"
                 Background="#282828" Foreground="White" BorderThickness="0"
                 Margin="20,0,20,20" MouseDoubleClick="PlaylistsListBox_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Margin="0,2">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold"/>
                            <TextBlock Text="{Binding SongCount, StringFormat='{}{0} songs'}" 
                                       FontSize="12" Foreground="Gray"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#404040"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#1db954"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="20">
            <Button x:Name="OkButton" Content="Add to Playlist" 
                    Background="#1db954" Foreground="White" BorderThickness="0"
                    Padding="20,8" Margin="0,0,10,0" FontSize="12"
                    Cursor="Hand" Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" 
                    Background="#606060" Foreground="White" BorderThickness="0"
                    Padding="20,8" FontSize="12"
                    Cursor="Hand" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
