<Window x:Class="WpfMusicPlayer.PlaylistDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:WpfMusicPlayer.Converters"
        Title="Playlist Details" Height="750" Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="#121212"
        BorderBrush="#2d2d30"
        BorderThickness="1"
        WindowStyle="None">

    <Window.Resources>
        <converters:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter"/>
        <converters:ListViewItemIndexConverter x:Key="ListViewItemIndexConverter"/>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#1db954"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1ed760"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#169c46"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GridViewColumnHeaderStyle" TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="#282828"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#404040"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1e1e1e"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom ListView Style -->
        <Style x:Key="CustomListViewStyle" TargetType="ListView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <!-- Shadow Effect -->
        <DropShadowEffect x:Key="DropShadowEffect" Color="#000000" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#232526" Offset="0.0"/>
                <GradientStop Color="#414345" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#181818" Padding="25" CornerRadius="15,15,0,0" Effect="{StaticResource DropShadowEffect}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Playlist Cover -->
                <Border Grid.Column="0" Background="#404040" Width="140" Height="140" 
                        CornerRadius="12" Margin="0,0,25,0" Effect="{StaticResource DropShadowEffect}">
                    <Image Source="{Binding CoverImage, Converter={StaticResource ByteArrayToImageConverter}}"
                           Stretch="UniformToFill"/>
                </Border>

                <!-- Playlist Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="PlaylistNameText" Text="{Binding Name}" 
                               Foreground="White" FontSize="28" FontWeight="Bold" Margin="0,0,0,8"
                               FontFamily="Segoe UI"/>
                    <TextBlock x:Name="PlaylistDescriptionText" Text="{Binding Description}" 
                               Foreground="#CCCCCC" FontSize="16" TextWrapping="Wrap" Margin="0,0,0,12"
                               FontFamily="Segoe UI Light"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸŽµ " Foreground="#1db954" FontSize="14"/>
                        <TextBlock Text="{Binding SongCount}" Foreground="#CCCCCC" FontSize="14" FontWeight="SemiBold"/>
                        <TextBlock Text=" songs â€¢ â±ï¸ " Foreground="#CCCCCC" FontSize="14"/>
                        <TextBlock Text="{Binding TotalDurationText}" Foreground="#CCCCCC" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="PlayAllButton" Content="â–¶ï¸ Play All" 
                            Style="{StaticResource ModernButton}" 
                            Background="#1db954" Click="PlayAllButton_Click" Height="40" Width="120"/>
                    <Button x:Name="EditPlaylistButton" Content="âœï¸ Edit" 
                            Style="{StaticResource ModernButton}" 
                            Click="EditPlaylistButton_Click" Width="100" Background="#6c757d"/>
                    <Button x:Name="CloseButton" Content="âŒ Close" 
                            Style="{StaticResource ModernButton}" 
                            Click="CloseButton_Click" Width="100" Background="#dc3545"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Search Bar -->
        <Border Grid.Row="1" Background="#282828" Margin="15" Padding="15" CornerRadius="10" Effect="{StaticResource DropShadowEffect}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="SearchTextBox" Grid.Column="0"
                         Background="#404040" Foreground="White" BorderThickness="0"
                         Padding="12" FontSize="14"
                         TextChanged="SearchTextBox_TextChanged"
                         Text="Search in playlist..."/>
                <Button x:Name="AddSongsButton" Content="âž• Add Songs"
                        Style="{StaticResource ModernButton}"
                        Background="#1db954" Click="AddSongsButton_Click" 
                        Grid.Column="1" Margin="15,0,0,0" Width="140" Height="40"/>
            </Grid>
        </Border>

        <!-- Songs List -->
        <ListView x:Name="PlaylistSongsListView" Grid.Row="2" 
                  Background="Transparent" Foreground="White"
                  Margin="15,0,15,15" MouseDoubleClick="PlaylistSongsListView_MouseDoubleClick"
                  BorderThickness="0"
                  Style="{StaticResource CustomListViewStyle}">
            <ListView.View>
                <GridView ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle}">
                    <GridViewColumn Header="#" Width="40">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ListViewItem, AncestorLevel=1}, 
                                                 Converter={StaticResource ListViewItemIndexConverter}}" 
                                           Foreground="Gray" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Cover" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border Width="60" Height="60" Background="#2d2d30" CornerRadius="8">
                                    <Image Source="{Binding AlbumArt, Converter={StaticResource ByteArrayToImageConverter}}"
                                           Stretch="UniformToFill"
                                           Width="60" Height="60">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AlbumArt}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Title">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Title}" Foreground="White" TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Artist">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Artist}" Foreground="Gray" TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Album">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Album}" Foreground="Gray" TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Duration" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DurationText}" Foreground="Gray"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Views" Width="70">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ViewCount}" Foreground="Gray" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Actions" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="ðŸ—‘ï¸" Style="{StaticResource ModernButton}"
                                        Width="35" Height="30" Padding="0"
                                        Click="RemoveFromPlaylistButton_Click"
                                        Tag="{Binding}"
                                        ToolTip="Remove from Playlist"
                                        Background="#dc3545"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Margin" Value="2"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <GridViewRowPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#282828"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#1db954"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#181818" Padding="10">
            <TextBlock x:Name="StatusText" Text="Ready" Foreground="Gray" FontSize="12"/>
        </Border>
    </Grid>
</Window>
