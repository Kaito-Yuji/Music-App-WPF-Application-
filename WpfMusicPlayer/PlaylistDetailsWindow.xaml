<Window x:Class="WpfMusicPlayer.PlaylistDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:WpfMusicPlayer.Converters"
        Title="Playlist Details" Height="700" Width="1000"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <converters:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter"/>
        <converters:ListViewItemIndexConverter x:Key="ListViewItemIndexConverter"/>
        
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#404040"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1e1e1e"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#121212">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#181818" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Playlist Cover -->
                <Border Grid.Column="0" Background="#404040" Width="120" Height="120" 
                        CornerRadius="5" Margin="0,0,20,0">
                    <Image Source="{Binding CoverImage, Converter={StaticResource ByteArrayToImageConverter}}"
                           Stretch="UniformToFill"/>
                </Border>

                <!-- Playlist Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="PlaylistNameText" Text="{Binding Name}" 
                               Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="PlaylistDescriptionText" Text="{Binding Description}" 
                               Foreground="Gray" FontSize="14" TextWrapping="Wrap" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding SongCount}" Foreground="Gray" FontSize="12"/>
                        <TextBlock Text=" songs • " Foreground="Gray" FontSize="12"/>
                        <TextBlock Text="{Binding TotalDurationText}" Foreground="Gray" FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="PlayAllButton" Content="▶️ Play All" 
                            Style="{StaticResource ModernButton}" 
                            Background="#1db954" Click="PlayAllButton_Click"/>
                    <Button x:Name="EditPlaylistButton" Content="✏️ Edit" 
                            Style="{StaticResource ModernButton}" 
                            Click="EditPlaylistButton_Click"/>
                    <Button x:Name="CloseButton" Content="❌ Close" 
                            Style="{StaticResource ModernButton}" 
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Search Bar -->
        <Border Grid.Row="1" Background="#282828" Margin="10" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="SearchTextBox" Grid.Column="0"
                         Background="#404040" Foreground="White" BorderThickness="0"
                         Padding="10" FontSize="14" 
                         TextChanged="SearchTextBox_TextChanged"
                         Text="Search in playlist..."/>
                <Button Grid.Column="1" x:Name="AddSongsButton" Content="➕ Add Songs"
                        Style="{StaticResource ModernButton}"
                        Background="#1db954" Click="AddSongsButton_Click"/>
            </Grid>
        </Border>

        <!-- Songs List -->
        <ListView x:Name="PlaylistSongsListView" Grid.Row="2" 
                  Background="Transparent" Foreground="White"
                  Margin="10,0,10,10" MouseDoubleClick="PlaylistSongsListView_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="#" Width="40">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ListViewItem, AncestorLevel=1}, 
                                                 Converter={StaticResource ListViewItemIndexConverter}}" 
                                           Foreground="Gray" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Title" Width="250">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Title}" Foreground="White"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Artist" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Artist}" Foreground="Gray"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Album" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Album}" Foreground="Gray"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Duration" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DurationText}" Foreground="Gray"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Actions" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="🗑️" Style="{StaticResource ModernButton}"
                                        Width="30" Height="25" Padding="0"
                                        Click="RemoveFromPlaylistButton_Click"
                                        Tag="{Binding}"
                                        ToolTip="Remove from Playlist"
                                        Background="#dc3545"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border Background="{TemplateBinding Background}">
                                    <GridViewRowPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#282828"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#404040"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#181818" Padding="10">
            <TextBlock x:Name="StatusText" Text="Ready" Foreground="Gray" FontSize="12"/>
        </Border>
    </Grid>
</Window>
