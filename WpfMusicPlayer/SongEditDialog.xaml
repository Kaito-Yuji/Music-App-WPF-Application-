<Window x:Class="WpfMusicPlayer.SongEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:WpfMusicPlayer.Converters"
        mc:Ignorable="d"
        Title="Edit Song" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#121212"
        BorderBrush="#2d2d30"
        BorderThickness="1"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Window.Resources>
        <converters:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter"/>
        
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#404040"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1e1e1e"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Focusable="False" 
                                        HorizontalScrollBarVisibility="Hidden" 
                                        VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#1db954"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#1db954"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1ed760"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#169c46"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Edit Song Information" 
                   Foreground="White" FontSize="20" FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                      Style="{StaticResource CustomScrollViewerStyle}">
            <StackPanel>
                <!-- Album Art Section -->
                <Border Background="#282828" Padding="15" CornerRadius="5" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Album Art" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Current Album Art -->
                            <Border Grid.Column="0" Width="120" Height="120" 
                                    Background="#404040" 
                                    CornerRadius="5" 
                                    Margin="0,0,15,0">
                                <Image x:Name="AlbumArtPreview" 
                                       Source="{Binding AlbumArt, Converter={StaticResource ByteArrayToImageConverter}}"
                                       Stretch="UniformToFill"
                                       Width="120" Height="120"/>
                            </Border>
                            
                            <!-- Album Art Controls -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <Button x:Name="ChangeImageButton" 
                                        Content="ðŸ“ Change Image" 
                                        Style="{StaticResource ModernButton}"
                                        Click="ChangeImageButton_Click"
                                        Background="#282828"/>
                                <Button x:Name="RemoveImageButton" 
                                        Content="ðŸ—‘ï¸ Remove Image" 
                                        Style="{StaticResource ModernButton}"
                                        Click="RemoveImageButton_Click"
                                        Background="#282828"/>
                                <TextBlock Text="Supported: JPG, PNG, BMP, GIF" 
                                           Foreground="Gray" FontSize="10" 
                                           Margin="5,10,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Song Information -->
                <Border Background="#282828" Padding="15" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Song Information" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <!-- Title -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Title*" Foreground="White" FontSize="12" Margin="0,0,0,5"/>
                            <TextBox x:Name="TitleTextBox" 
                                     Style="{StaticResource ModernTextBox}"
                                     Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Artist -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Artist*" Foreground="White" FontSize="12" Margin="0,0,0,5"/>
                            <TextBox x:Name="ArtistTextBox" 
                                     Style="{StaticResource ModernTextBox}"
                                     Text="{Binding Artist, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Album -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Album" Foreground="White" FontSize="12" Margin="0,0,0,5"/>
                            <TextBox x:Name="AlbumTextBox" 
                                     Style="{StaticResource ModernTextBox}"
                                     Text="{Binding Album, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Genre -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Genre" Foreground="White" FontSize="12" Margin="0,0,0,5"/>
                            <TextBox x:Name="GenreTextBox" 
                                     Style="{StaticResource ModernTextBox}"
                                     Text="{Binding Genre, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Year -->
                        <StackPanel Margin="0,0,0,0">
                            <TextBlock Text="Year" Foreground="White" FontSize="12" Margin="0,0,0,5"/>
                            <TextBox x:Name="YearTextBox" 
                                     Style="{StaticResource ModernTextBox}"
                                     Text="{Binding Year, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="CancelButton"
                    Height="30"
                    Width="50"
                    Grid.Column="1"
                    Content="Cancel"
                    Style="{StaticResource ModernButton}"
                    Click="CancelButton_Click"
                    IsCancel="True"/>
            
            <Button x:Name="SaveButton" 
                    Width="100"
                    Grid.Column="2"
                    Content="Save Changes" 
                    Style="{StaticResource PrimaryButton}"
                    Click="SaveButton_Click"
                    IsDefault="True"/>
        </Grid>
    </Grid>
</Window>
